<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TVSeriesProiect.Views.WelcomePage"
             BackgroundColor="#171717">

    <StackLayout
        Padding="30,0"
        Spacing="25"
        VerticalOptions="CenterAndExpand"
        HorizontalOptions="CenterAndExpand">

        <Label
            Text="TSDB"
            Style="{StaticResource Headline}"
            FontAttributes="Bold"
            HorizontalOptions="Center"
            TextColor="White"/>

        <Image
            Source="popcorn.png"
            HeightRequest="185"
            Aspect="AspectFit"
            HorizontalOptions="Center" />

        <Label
            Text="Welcome to our TV Series App"
            Style="{StaticResource SubHeadline}"
            HorizontalOptions="Center"
            TextColor="White"/>

        <Button
            Text="Enter App"
            FontAttributes="Bold"
            FontSize="18"
            WidthRequest="200"
            Clicked="OnWelcomePageClicked"/>

    </StackLayout>

</ContentPage>
