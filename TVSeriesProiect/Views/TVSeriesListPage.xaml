<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TVSeriesProiect.Views.TVSeriesListPage"
             Title="Top 50 TV Series"
             BackgroundColor="#171717">

    <ScrollView>
        <CollectionView
            x:Name="lvTVSeries_listPage"
            ItemsSource="{Binding tvSeriesList}"
            SelectionMode="Single"
            HorizontalOptions="FillAndExpand"
            VerticalOptions="FillAndExpand">

            <CollectionView.ItemsLayout>
                <!-- grila 2 col pentru a afisa cate 2 carduri pe rand -->
                <GridItemsLayout Orientation="Vertical" Span="2" />
            </CollectionView.ItemsLayout>

            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Frame
                        Padding="10"
                        Margin="10"
                        BackgroundColor="#DA0037"
                        CornerRadius="10"
                        HasShadow="True">
                        <StackLayout Spacing="5">

                            <!-- img -->
                            <Image
                                x:Name="img_listPage"
                                Source="{Binding Poster}"
                                
                                HeightRequest="150"
                                Aspect="AspectFit"
                                Loaded="Image_Loaded_ListPage" />

                            <!-- titlu -->
                            <Label
                                Text="{Binding Title}"
                                FontAttributes="Bold"
                                FontSize="18"
                                TextColor="White"
                                LineBreakMode="TailTruncation" />

                            <!-- data aparitie si durata -->
                            <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                                <Label
                                    Text="{Binding Released}"
                                    FontSize="14"
                                    TextColor="White" />
                                <Label Text=" â€¢ " FontSize="14" TextColor="White" />
                                <Label
                                    Text="{Binding Time}"
                                    FontSize="14"
                                    TextColor="White" />
                            </StackLayout>

                            <!-- rating -->
                            <StackLayout Orientation="Horizontal" HorizontalOptions="Start">
                                <Image Source="star.png" HeightRequest="16" WidthRequest="16" VerticalOptions="Center" />
                                <Label
                                    Text="{Binding Rating}"
                                    FontSize="14"
                                    FontAttributes="Bold"
                                    TextColor="Yellow"
                                    VerticalOptions="Center" />
                            </StackLayout>
                            <Button  ImageSource="info.png" Grid.Row="2" Grid.RowSpan="1" Grid.Column="2" Clicked="BtnInfo_listPage_clicked" />
                        </StackLayout>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

        </CollectionView>
    </ScrollView>
</ContentPage>
